<html>
    <head>
        <title>Add a contact!</title>
    </head>
    <body>
      <form action='/create_contact' method='post'>
          <label for = 'contact_name'>Enter your contact name</label>
          <input id = 'contact_name' name = 'contact_name' type = 'text'>
          <br>
          <label for = 'phone_number'>Enter phone number</label>
          <input id = 'phone_number' name = 'phone_number' type = 'number'>
          <br>
          <label for ='address'>Enter your Address</label>
          <input id = 'address' name = 'address' type = 'text'>
          <br>
          <button type = 'submit'>Go!</button>
      </form>
      <form action='/delete' method='post'>
          <button type = 'submit' class = 'btn'></button>
      </form>

      <p>Here are all the contacts you've submitted!</p>
          {% if contacts is not empty %}
              {% for contact in contacts %}
                  <p>Name: {{ contact.getName}}</p>
                      <ul>
                          <li>Phone Number: {{ contact.getNumber}} </li>
                          <li>Address : {{ contact.getAddress}} </li>
                        </ul>
              {% endfor %}
          {% endif %}

        </body>
</html>
